{
    "name": "Ã…",
    "scopeName": "source.aa",
    "patterns": [
      { "include": "#pre-processing" },
      { "include": "#comment" },
      { "include": "#declerations" },
      { "include": "#directives" },
      { "include": "#expression" }
    ],
    "repository": {
      "declerations": {
        "patterns": [
          { "include": "#namespace-decleration" }
        ]
      },
      "directives": {
        "patterns": [
          { "include": "#using-directive" }
        ]
      },
      "expression": {
        "patterns": [
          { "include": "#number" },
          { "include": "#keywords" },
          { "include": "#primitivetype" },
          { "include": "#builtinfunctions" },
          { "include": "#paren-expression" },
          { "include": "#single-line-string"}
        ]
      },
      "number": {
        "match": "[0-9]",
        "name": "constant.numeric"
      },
      "keywords": {
        "match": "new |class ",
        "name": "keyword.word"
      },
      "primitivetype": {
        "match": "int |string |char |bool |float |double |long |short |void |Any ",
        "name": "keyword.operator.typeid"
      },
      "builtinfunctions": {
        "match": "println",
        "name": "entity.name.function"
      },
      "comment": {
        "begin": "//",
        "end": "\n",
        "name": "comment"
      },
      "single-line-string": {
        "begin": "\"",
        "end": "\"",
        "name": "string.value"
      },
      "using-directive": {
        "patterns": [
          {
            "begin": "\\b(using)\\s+\\S+\\s+(from)\\s+",
            "beginCaptures": {
              "1": {
                "name": "keyword.other.using"
              },
              "2": {
                "name": "keyword.other.using"
              }
            },
            "end": "(?=;)",
            "patterns": [
              {
                "include": "#comment"
              },
              {
                "name": "entity.name.type",
                "match": "@?[_[:alpha:]][_[:alnum:]]*"
              }
            ]
          }
        ]
      },
      "namespace-decleration": {
        "begin": "\\b(namespace)\\s+",
        "beginCaptures": {
          "1": {
            "name": "keyword.word"
          }
        },
        "end": "(?<=\\})",
        "patterns": [
          {
            "include": "#comment"
          },
          {
            "name": "entity.name.type",
            "match": "@?[_[:alpha:]][_[:alnum:]]*"
          },
          {
            "begin": "\\{",
            "beginCaptures": {
              "0": {
                "name": "punctuation.curlybrace.open.cs"
              }
            },
            "end": "\\}",
            "endCaptures": {
              "0": {
                "name": "punctuation.curlybrace.close.cs"
              }
            },
            "patterns": [
              {
                "include": "#declarations"
              },
              {
                "include": "#expression"
              }
            ]
          }
        ]
      }
    }
}

{
    "scopeName": "source.aa",
    "patterns": [ { "include": "#single-line-comment" }, {  "include": "#expression" }],
    "repository": {
      "expression": {
        "patterns": [
          { "include": "#number" },
          { "include": "#word" }, 
          { "include": "#keyword" },
          { "include": "#paren-expression" }
        ]
      },
      "number": {
        "match": "[0-9]",
        "name": "constant.numeric"
      },
      "word": {
        "match": "class",
        "name": "keyword.word"
      },
      "keyword": {
        "match": "new",
        "name": "keyword.word"
      },
      "paren-expression": {
        "begin": "\\(",
        "end": "\\)",
        "beginCaptures": {
          "0": { "name": "punctuation.paren.open" }
        },
        "endCaptures": {
          "0": { "name": "punctuation.paren.close" }
        },
        "name": "expression.group",
        "patterns": [{ "include": "#expression" }]
      },
      "single-line-comment": {
        "begin": "//",
        "end": "\n",
        "name": "comment"
      }
    }
}

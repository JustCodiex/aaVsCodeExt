{
    "scopeName": "source.aa",
    "patterns": [ { "include": "#single-line-comment" }, {  "include": "#expression" }],
    "repository": {
      "expression": {
        "patterns": [
          { "include": "#number" },
          { "include": "#keywords" },
          { "include": "#primitivetype" },
          { "include": "#builtinfunctions" },
          { "include": "#paren-expression" },
          { "include": "#single-line-string"}
        ]
      },
      "number": {
        "match": "[0-9]",
        "name": "constant.numeric"
      },
      "keywords": {
        "match": "new|class|this",
        "name": "keyword.word"
      },
      "primitivetype": {
        "match": "int |string |char |bool |float |double |long |short |void |Any ",
        "name": "keyword.operator.typeid"
      },
      "builtinfunctions": {
        "match": "println",
        "name": "keyword.other.unit"
      },
      "paren-expression": {
        "begin": "\\(",
        "end": "\\)",
        "beginCaptures": {
          "0": { "name": "punctuation.paren.open" }
        },
        "endCaptures": {
          "0": { "name": "punctuation.paren.close" }
        },
        "name": "expression.group",
        "patterns": [{ "include": "#expression" }]
      },
      "single-line-comment": {
        "begin": "//",
        "end": "\n",
        "name": "comment"
      },
      "single-line-string": {
        "begin": "\"",
        "end": "\"",
        "name": "string.value"
      }
    }
}
